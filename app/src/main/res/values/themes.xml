<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"> <!-- Thêm xmlns:tools nếu chưa có -->

    <style name="Theme.PureRoot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Bạn có thể tùy chỉnh các thuộc tính màu sắc và các thuộc tính khác ở đây -->
        <!-- Ví dụ: -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item> <!-- Thay @color/purple_500 bằng màu bạn muốn -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>